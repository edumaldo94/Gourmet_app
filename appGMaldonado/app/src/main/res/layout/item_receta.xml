<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF6F6"
    android:elevation="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPerfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        android:src="@drawable/icon_perfil"
        app:layout_constraintBottom_toTopOf="@+id/imgReceta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Nombre Usuario"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:elevation="4dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imgPerfil"
        app:layout_constraintTop_toTopOf="@id/imgPerfil" />

    <ImageView
        android:id="@+id/imgReceta"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_perfil"
        app:layout_constraintTop_toBottomOf="@id/imgPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:elevation="4dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="#B2000000"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/imgReceta"
        app:layout_constraintStart_toStartOf="@id/imgReceta"
        app:layout_constraintEnd_toEndOf="@id/imgReceta" />



</androidx.constraintlayout.widget.ConstraintLayout>
